<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/headlines_menu_wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="0dip" 
        android:layout_weight="1"
        android:background="#FFFFFF">

        <RelativeLayout
	        android:id="@+id/menu"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="25dip">
        
	        <Button
	            android:id="@+id/button1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
				android:layout_marginRight="25dip"
				android:text="Destinations"
				android:drawablePadding="5dip"
	            android:drawableTop="@drawable/icon1"
	            android:background="@android:color/transparent"/>
	        
	        <Button
	            android:id="@+id/button2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="25dip"
				android:layout_toRightOf="@+id/button1"
				android:layout_alignTop="@+id/button1"
				android:text="Diseases"
				android:drawablePadding="5dip"
	            android:drawableTop="@drawable/icon2"
	            android:background="@android:color/transparent"/>
	        
	        <!--  
	        <Button
	            android:id="@+id/button3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="25dip"
				android:layout_below="@+id/button1"
				android:text="Vaccines"
				android:drawablePadding="5dip"
	            android:drawableTop="@drawable/icon3"
	            android:background="@android:color/transparent"/>
			-->
			
        </RelativeLayout>

    </RelativeLayout>
    
    <RelativeLayout 
       	android:id="@+id/headlines_wrapper"
        android:layout_height="80dip"
        android:layout_width="match_parent"
        android:background="#FFFFFF" >

        
        <ImageView
            android:id="@+id/world"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/world" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/world" >
	        
            <ImageView
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:scaleType="fitXY"
	            android:src="@drawable/flipper_popup" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:paddingLeft="23dip"
                android:paddingTop="5dip"
                android:text="Outbreaks:" />

        </FrameLayout>

    </RelativeLayout>

</LinearLayout>